menuconfig BH1730FVC
	bool "BH1730FVC sensor"
	depends on I2C && HAS_DTS_I2C
	help
	 Enable driver for BH1730FVC I2C-based lux sensor

if BH1730FVC

choice
	prompt "Trigger mode"
	default FV1730FVC_TRIGGER_NONE
	help
	  Specify the type of triggering used by the driver.

config FV1730FVC_TRIGGER_NONE
	bool "No trigger"

config FV1730FVC_TRIGGER_GLOBAL_THREAD
	bool "Use global thread"
	depends on GPIO
	select FV1730FVC_TRIGGER

config FV1730FVC_TRIGGER_OWN_THREAD
	bool "Use own thread"
	depends on GPIO
	select FV1730FVC_TRIGGER

endchoice

config FV1730FVC_TRIGGER
	bool

endif
